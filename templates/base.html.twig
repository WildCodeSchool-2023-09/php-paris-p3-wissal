<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="{{ asset('build/images/icons/icon.png') }}"/>
        
        <title>
            {% block title %}NeoRetro{% endblock %}
        </title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>

    <body>
        {% block header %}
            {% include "components/_header.html.twig" %}
        {% endblock header %}

        <div id="main-container">
            {% block content %}
            {% endblock %}
        </div>

        {% block navbar %}
            {% include "components/_navbar.html.twig" %}
        {% endblock navbar %}

        {% block javascript %}
        {% endblock javascript %}
    </body>
</html>
